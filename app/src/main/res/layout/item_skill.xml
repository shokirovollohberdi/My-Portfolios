<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_background"
    android:orientation="vertical"
    android:padding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSkill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/aldrich"
            android:gravity="start"
            android:text="Retrofit"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />


        <TextView
            android:id="@+id/tv_percent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/aldrich"
            android:gravity="end"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:elevation="1dp"
        app:cardCornerRadius="@dimen/_20sdp">

        <github.nisrulz.stackedhorizontalprogressbar.StackedHorizontalProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_8sdp"
            android:id="@+id/precent"
            android:progressDrawable="@drawable/stacked_horizontal_progress"
            android:secondaryProgress="80"
            android:secondaryProgressTint="@color/white"
            android:secondaryProgressTintMode="screen" />


    </androidx.cardview.widget.CardView>


</LinearLayout>